                        <path d="M4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z" />
                    </svg>
                    <span class="counter">@Model.ConnectionsCount</span>
                    <p>Bağlantılarınız</p>
                </a>
            </div>
        </div>
        <div class="four col-md-3">
            <div class="counter-box ">
                <a href="/Exam/Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="5em" height="5em" fill="currentColor" class="bi bi-file-text" viewBox="0 0 16 16">
