<link href="~/css/homeIndex.css" rel="stylesheet" type="text/css" />
@model HomeIndexDTO
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">

    <div class="row">

        <div class="four col-md-3">
            <div class="counter-box">
                <a href="/Connection/AllConnections">
                    <svg xmlns="http://www.w3.org/2000/svg" width="5em" height="5em" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                        <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
