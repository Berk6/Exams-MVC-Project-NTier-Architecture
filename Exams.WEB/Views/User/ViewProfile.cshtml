@model UserViewModel
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.0.45/css/materialdesignicons.min.css" integrity="sha256-nRyVCcVDSlWN9d68r9M+rKBLE4k9Cp1j3XSY/umjvvU=" crossorigin="anonymous" />
@if (Model != null)
{
    <div class="container">
        <div class="row mb-4">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="text-center">
                            <div class="dropdown float-end">
                                <a class="text-body dropdown-toggle font-size-18" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true">
                                    <i class="uil uil-ellipsis-v"></i>
                                </a>
                            </div>
                            <div class="clearfix"></div>
                            @if (Model.ProfilePicture == null)
                            {
                                <div>
                                    <img src="~/images/users/12953b90-838f-4186-8614-fdefb4022b05_hitman.jpg" alt="" class="avatar-lg rounded-circle img-thumbnail">
                                </div>
                            }
                            else
                            {
                                <div>
                                    <img src="~/images/users/@Model.ProfilePicture" alt="" class="avatar-lg rounded-circle img-thumbnail">
                                </div>
                            }
                            <h5 class="mt-3 mb-1">@Model.UserName</h5>
                            <p class="text-muted">@Model.Institution</p>
                            @if (Model.UserName != User.Identity.Name)
                            {<form>

                                        <input asp-for="@Model.UserName" name="UserName" value="@Model.UserName" hidden />
                                @if (Model.isAdded != true)
                                {
                                    <div class="mt-4">
                                        <button type="submit" asp-controller="Connection" asp-action="AddConnection" formmethod="post" class="btn btn-success"> Bağlantı Kur</button>
                                    </div>
                                }
                                else
                                {
                                    <div class="mt-4">
                                        <button type="submit" asp-controller="Connection" asp-action="RemoveConnection" formmethod="post" class="btn btn-danger"> Bağlantıyı Sil</button>
                                    </div>
                                }
                            </form>
                            }
                        </div>

                        <hr class="my-4">

                        <div class="text-muted">
                            <h5 class="font-size-16">Hakkında</h5>
                            <p>@Model.Explanation</p>
                            <div class="table-responsive mt-4">
                                @if (Model.Name != null)
                                {
                                    <div>
                                        <p class="mb-1">Adı Soyadı :</p>
                                        <h5 class="font-size-16">@Model.Name @Model.Surname</h5>
                                    </div>
                                }
                                @if (Model.Email != null)
                                {
                                    <div class="mt-4">
                                        <p class="mb-1">Email :</p>
                                        <h5 class="font-size-16">@Model.Email</h5>
                                    </div>
                                }
                                @if (Model.City != null)
                                {
                                    <div class="mt-4">
                                        <p class="mb-1">Şehir :</p>
                                        <h5 class="font-size-16">@Model.City</h5>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="dikkat"> Profil Bulunamadı !</div>
}
