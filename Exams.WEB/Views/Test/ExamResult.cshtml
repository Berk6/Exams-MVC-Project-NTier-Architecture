@model List<ExamResultViewModel>

@if (ViewBag.Error == null)
{
    <h3> Test Adı : @Model[0].Exam.Name </h3>
    <br />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Adı ve Soyadı</th>
                <th>Kullanıcı Adı</th>
                <th>Aldığı Puan</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model[i].Student.Name @Model[i].Student.Surname </td>
                    <td>@Model[i].Student.UserName</td>
                    <td>@Model[i].Result</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="dikkat">@ViewBag.Error</div>
}